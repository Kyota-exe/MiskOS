@@ -0,0 +1,187 @@
+#include <bits/ensure.h>
+#include <mlibc/debug.hpp>
+#include <mlibc/all-sysdeps.hpp>
+#include <mlibc/thread-entry.hpp>
+#include <errno.h>
+#include <dirent.h>
+#include <fcntl.h>
+#include <limits.h>
+
+#include <tonix/SystemCall.h>
+
+namespace mlibc
+{
+    void sys_libc_log(const char* message)
+    {
+        SystemCall(SystemCallID::Log, message);
+    }
+
+    void sys_libc_panic()
+    {
+        SystemCall(SystemCallID::Panic, "mlibc panic!");
+    }
+
+    int sys_open(const char* path, int flags, int* fd)
+    {
+        ssize_t ret = SystemCall(SystemCallID::Open, path, flags);
+
+        if (ret < 0) return -ret;
+
+        *fd = ret;
+        return 0;
+    }
+
+    int sys_close(int fd)
+    {
+        ssize_t ret = SystemCall(SystemCallID::Close, fd);
+
+        if (ret < 0) return -ret;
+
+        return 0;
+    }
+
+    int sys_read(int fd, void* buf, size_t count, ssize_t* bytes_read)
+    {
+        ssize_t ret = SystemCall(SystemCallID::Read, fd, buf, count);
+
+        if (ret < 0) return -ret;
+
+        *bytes_read = ret;
+        return 0;
+    }
+
+#ifndef MLIBC_BUILDING_RTDL
+    int sys_write(int fd, const void* buf, size_t count, ssize_t* bytes_written)
+    {
+        ssize_t ret = SystemCall(SystemCallID::Write, fd, buf, count);
+
+        if (ret < 0) return -ret;
+
+        *bytes_written = ret;
+        return 0;
+    }
+#endif
+
+    int sys_seek(int fd, off_t offset, int whence, off_t* new_offset)
+    {
+        off_t ret = SystemCall(SystemCallID::Seek, fd, offset, whence);
+
+        if (ret < 0) return -ret;
+
+        *new_offset = ret;
+        return 0;
+    }
+
+    int sys_vm_map(void* hint, size_t size, int prot, int flags, int fd, off_t offset, void** window)
+    {
+        auto ret = SystemCall(SystemCallID::FileMap, hint, size, prot, flags, fd, offset);
+
+        if (ret < 0) return -ret;
+
+        *window = reinterpret_cast<void*>(ret);
+        return 0;
+    }
+
+    int sys_tcb_set(void* pointer)
+    {
+        SystemCall(SystemCallID::TCBSet, pointer);
+        return 0;
+    }
+
+    int sys_anon_allocate(size_t size, void** pointer)
+    {
+        return sys_vm_map(nullptr, size, PROT_READ | PROT_WRITE, MAP_PRIVATE | MAP_ANONYMOUS, -1, 0, pointer);
+    }
+
+    int sys_anon_free(void* pointer, size_t size)
+    {
+        SystemCall(SystemCallID::NotImplemented, pointer, size);
+        return 0;
+    }
+
+    int sys_isatty(int fd)
+    {
+        int ret = SystemCall(SystemCallID::IsTerminal, fd);
+
+        if (ret < 0) return -ret;
+
+        return 0;
+    }
+
+#ifndef MLIBC_BUILDING_RTDL
+    void sys_exit(int status)
+    {
+        SystemCall(SystemCallID::Exit, status);
+    }
+#endif
+
+#ifndef MLIBC_BUILDING_RTDL
+    int sys_clock_get(int clock, time_t *secs, long *nanos)
+    {
+        SystemCall(SystemCallID::NotImplemented, secs, nanos);
+        return 0;
+    }
+#endif
+
+    int sys_vm_unmap(void* pointer, size_t size)
+    {
+        return sys_anon_free(pointer, size);
+    }
+
+    int sys_futex_wait(int* pointer, int expected, const timespec* time)
+    {
+        SystemCall(SystemCallID::NotImplemented, pointer, expected, time);
+        return 0;
+    }
+
+    int sys_futex_wake(int* pointer)
+    {
+        SystemCall(SystemCallID::NotImplemented, pointer);
+        return 0;
+    }
+
+// All remaining functions are disabled in ldso.
+#ifndef MLIBC_BUILDING_RTDL
+
+    int sys_clone(void* entry, void* user_arg, void* tcb, pid_t* tid_out)
+    {
+        SystemCall(SystemCallID::NotImplemented, entry, user_arg, tcb, tid_out);
+        return 0;
+    }
+
+    void sys_thread_exit()
+    {
+        SystemCall(SystemCallID::NotImplemented);
+    }
+
+    int sys_sleep(time_t* secs, long* nanos)
+    {
+        return SystemCall(SystemCallID::Sleep, *secs, *nanos);
+    }
+
+    int sys_fork(pid_t* child)
+    {
+        SystemCall(SystemCallID::NotImplemented, child);
+        return 0;
+    }
+
+    int sys_execve(const char* path, char* const argv[], char* const envp[])
+    {
+        SystemCall(SystemCallID::NotImplemented, path, argv, envp);
+        return 0;
+    }
+
+    pid_t sys_getpid()
+    {
+        SystemCall(SystemCallID::NotImplemented);
+        return 0;
+    }
+
+    pid_t sys_getppid()
+    {
+        SystemCall(SystemCallID::NotImplemented);
+        return 0;
+    }
+
+#endif // MLIBC_BUILDING_RTDL
+}
